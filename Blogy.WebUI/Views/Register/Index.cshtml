@using Blogy.Business.DTOS.UserDtos
@model RegisterDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
@await Component.InvokeAsync("_UserLayoutHeadComponent")



<h3 class="text-center">Kayıt Ol</h3>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="FirstName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="LastName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email Adresiniz</label>
            <input type="email" asp-for="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Kullanıcı Adınız</label>
            <input type="text" asp-for="UserName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" asp-for="Password" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Şifre Tekrar</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" required />
        </div>
        <br />
        <div class="text-danger" asp-validation-summary="All"></div>
        @* <span class="text-danger">@Html.ValidationSummary()</span> *@
        <button class="btn btn-outline-info">Kayıt Ol</button>
    </form>
</div>


