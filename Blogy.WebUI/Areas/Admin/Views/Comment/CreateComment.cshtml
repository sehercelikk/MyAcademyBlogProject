@using Blogy.Business.DTOS.CommentDtos
@model CreateCommentDto
@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yorum Oluştur</h1>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label>Blog</label>
            <select typeof="text" asp-for="BlogId" asp-items="@ViewBag.Blogs" class="form-control"></select>
            <span class="text-danger" asp-validation-for="BlogId"></span>
            <br />
        </div>
       <div class="form-group">
            <label>Yorum</label>
            <textarea type="text" asp-for="Content" class="form-control" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Content"></span>
            <br />
       </div>
        <button class="btn btn-primary">Ekle</button>
    </form>
</div>


