@using Blogy.Business.DTOS.UserDtos
@model ChangePasswordDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Şifremi Güncelle</h3>
    <form method="post">
       <div class="form-group">
            <label>Mevcut Şifreniz</label>
            <input type="password" asp-for="CurrentPassword" class="form-control" />
            <br />
       </div>
        <div class="form-group">
            <label>Yeni Şifreniz</label>
            <input type="password" asp-for="NewPassword" class="form-control" />
            <br />
        </div>
        <div class="form-group">
            <label>Yeni Şifreniz Tekrar</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <br />
        </div>
        <span class="text-danger">@Html.ValidationSummary()</span>
        <button class="btn btn-outline-success">Şifremi Değiştir</button>
    </form>
</div>

