@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Bloglar</h1>

<div class="container">
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>Blog Başlık</th>
            <th>Açıklama</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.CoverImage" style="height:75px;width:75px;"/>@item.Title</td>
                <td>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + " ..." : item.Description)</td>
                <td>@item.Category.Name</td>
                <td><a href="/Admin/Blog/DeleteBlog/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/Blog/CreateBlog" class="btn btn-outline-success">Ekle</a>
</div>

