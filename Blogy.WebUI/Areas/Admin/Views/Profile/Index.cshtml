@using Blogy.Business.DTOS.UserDtos
@model EditProfileDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Bilgilerimi Güncelle</h3>
    <div class="card text-center">
        <div class="card-title text-secondary">
            <h4>Profil Resmi</h4>
        </div>
        <div class="card-body">
            <img src="@Model.ImageUrl" style="height:100px;width:100px;" alt="Profil Resmi" />
        </div>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Profil Resmi Seç</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <br />
                </div>
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" asp-for="FirstName" class="form-control" required />
                    <br />
                </div>
                <div class="form-group">

                    <label>Soyad</label>
                    <input type="text" asp-for="LastName" class="form-control" required />
                    <br />
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" required />
                    <br />
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" required />
                    <br />
                </div>
                <div class="form-group">
                    <label>Ünvan</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                    <br />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="ImageUrl" class="form-control" />
                </div>
            </div>
            <div class="col-6">
                <label>Bilgileri Güncellemek için mevcut şifrenizi girin</label>
                <input type="password" asp-for="CurrentPassword" class="form-control" required />
                <br />
            </div>
            <span class="text-danger">@Html.ValidationSummary()</span>
            <button class="btn btn-outline-dark">Bilgileri Güncelle</button>
        </div>
    </form>
</div>


